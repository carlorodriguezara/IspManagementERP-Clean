@using IspManagementERP.Client.Services
@inject ToastService ToastService

<!-- Componente visual que muestra un toast en la esquina inferior derecha.
     Usa clases de Bootstrap para estilo; se oculta automáticamente tras unos segundos. -->

<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 1050;">
    @if (visible)
    {
        <div class="toast show align-items-center text-bg-@toastType border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    @message
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" aria-label="Cerrar" @onclick="Hide"></button>
            </div>
        </div>
    }
</div>

@code {
    private bool visible;
    private string message = "";
    private string toastType = "info";
    private System.Timers.Timer? timer;

    protected override void OnInitialized()
    {
        ToastService.OnShow += Show;
        ToastService.OnHide += Hide;
    }

    private void Show(string msg, string type)
    {
        message = msg;
        toastType = type;
        visible = true;
        StateHasChanged();

        timer?.Stop();
        timer = new System.Timers.Timer(3500);
        timer.Elapsed += (_, __) =>
        {
            Hide();
            timer?.Stop();
        };
        timer.Start();
    }

    private void Hide()
    {
        visible = false;
        StateHasChanged();
    }

    public void Dispose()
    {
        ToastService.OnShow -= Show;
        ToastService.OnHide -= Hide;
        timer?.Dispose();
    }
}