@using System.Net.Http.Json
@inject HttpClient Http


<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">IspManagementERP</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </NavLink>
        </div>
        <div class="nav-item px-3">
            @*  <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </NavLink> *@

            <AuthorizeView Policy="CanViewReports">
                <Authorized>
                    <NavLink href="fetchdata" Match="NavLinkMatch.All">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
                    </NavLink>
                </Authorized>
            </AuthorizeView>
        </div>
        <div class="nav-item px-3">
            <AuthorizeView>
                <Authorized>
                    @{
                        // default: ocultar hasta que sepamos permisos
                        var canManage = false;
                    }

                    @if (canManage)
                    {
                        <NavLink class="nav-link" href="admin/users" Match="NavLinkMatch.Prefix">
                            <span class="oi oi-people" aria-hidden="true"></span> Admin Users
                        </NavLink>
                    }
                </Authorized>
                <NotAuthorized></NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var resp = await Http.GetFromJsonAsync<PermissionsDto>("api/me/permissions");
            if (resp != null)
            {
                var hasClaim = resp.Claims?.Any(c => c.Type == "permission" && c.Value == "users.manage") == true;
                var hasRole = resp.Roles?.Contains("Admin") == true;
                canManage = hasClaim || hasRole;
            }
        }
        catch
        {
            canManage = false;
        }
    }

    private bool canManage = false;

    class PermissionsDto
    {
        public string UserId { get; set; } = "";
        public string? Email { get; set; }
        public List<string> Roles { get; set; } = new();
        public List<ClaimDto> Claims { get; set; } = new();
    }
    class ClaimDto { public string Type { get; set; } = ""; public string Value { get; set; } = ""; }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
